<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_img">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/image_example"
        android:scaleType="fitXY"
        android:layout_margin="4dp"
        android:id="@+id/image_single_DetailActivity"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_single_DetailActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="10dp"
        android:background="@color/header"
        android:gravity="center"
        android:text="Candi Ratu Boko"
        android:textColor="#fefefe"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="396dp"
        android:layout_below="@+id/textView_single_DetailActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/body_detail">

        <TextView
            android:id="@+id/tes"
            android:layout_width="349dp"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="10dp"
            android:background="@color/header"
            android:gravity="center"
            android:text="Lokasi Wisata"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="349dp"
            android:layout_height="wrap_content"


            android:layout_below="@+id/dataProvinsi"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="10dp"
            android:background="@color/header"
            android:gravity="center"
            android:text="Deskripsi"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/WisataDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:justificationMode="inter_word"
            android:text="Disini adalah Deskripsi yang sangat panjang sekali mungkin cukup sekian"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/dataProvinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tes"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/TextViewProvinsi"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:text="Kepulauan bangka belitung"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/dataKabupaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataProvinsi"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/TextViewKabupaten"
            android:gravity="left"
            android:text="Kabupaten bangka selatan"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/dataKecamatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tes"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/TextViewKecamatan"
            android:gravity="left"
            android:text="Bojong malaka"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/dataKelurahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataKecamatan"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textViewKelurahan"
            android:gravity="left"
            android:text="Baleendah"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/TextViewProvinsi"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tes"
            android:layout_alignStart="@+id/tes"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="0dp"
            android:gravity="left"
            android:text="Provinsi   :"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/TextViewKecamatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tes"
            android:layout_alignStart="@+id/tes"
            android:layout_marginStart="206dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="0dp"
            android:gravity="left"
            android:text="Kecamatan :"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/textViewKelurahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewKecamatan"
            android:layout_alignStart="@+id/tes"
            android:layout_marginStart="207dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="0dp"
            android:gravity="left"
            android:text="Kelurahan    :"
            android:textColor="#000000"
            android:textSize="9dp" />

        <TextView

            android:id="@+id/TextViewKabupaten"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewProvinsi"
            android:layout_alignStart="@+id/tes"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:gravity="left"
            android:text="Kota/Kab :"
            android:textColor="#000000"
            android:textSize="9dp" />

    </RelativeLayout>

